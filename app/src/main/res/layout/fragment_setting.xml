<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/grey_bg"
    tools:context=".ui.SettingFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">
        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:src="@drawable/avatar"
            android:scaleType="fitXY"
            android:layout_marginVertical="7dp"
            android:background="@color/transparent"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:paddingHorizontal="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn_merchant_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/merchant_name"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:fontFamily="@font/roboto_regular"
                android:background="@color/white"
                android:textAlignment="textStart"
                android:drawableStart="@drawable/ic_merchant_name"
                android:drawablePadding="5dp" />
            <TextView
                android:id="@+id/tv_merchant_name"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:text="Quan co Tu"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_regular"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:maxLines="2"
                android:textAlignment="textEnd"
                android:elevation="5dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/address"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:fontFamily="@font/roboto_regular"
                android:background="@color/white"
                android:textAlignment="textStart"
                android:drawableStart="@drawable/ic_location"
                android:drawablePadding="5dp"/>
            <TextView
                android:id="@+id/tv_address"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:text="123, Ly Thuong Kiet, Q. 10"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_regular"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:maxLines="2"
                android:textAlignment="textEnd"
                android:elevation="5dp"/>
        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:paddingVertical="8dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_ic_coin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_coin_1"
            android:scaleType="fitXY"
            android:layout_alignParentStart="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/account_balance"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_regular"
            android:layout_toEndOf="@id/iv_ic_coin"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/tv_wallet"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/roboto_regular"
            android:text="0Ä‘"
            android:textAlignment="textEnd"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingHorizontal="10dp">
        <Button
            android:id="@+id/btn_submit_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:drawableStart="@drawable/ic_money_withdraw"
            android:drawablePadding="5dp"
            android:text="@string/submit_money"
            android:textAlignment="textStart"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_regular"
            android:textAllCaps="false"/>
        <TextView
            android:id="@+id/tv_processing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_regular"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:elevation="5dp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:paddingHorizontal="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn_opening"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/open_time"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:fontFamily="@font/roboto_regular"
                android:background="@color/white"
                android:textAlignment="textStart"
                android:drawableStart="@drawable/ic_clock_green"
                android:drawablePadding="5dp" />
            <TextView
                android:id="@+id/tv_opening"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_regular"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:maxLines="1"
                android:layout_marginStart="130dp"
                android:elevation="5dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn_closing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/close_time"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:fontFamily="@font/roboto_regular"
                android:background="@color/white"
                android:textAlignment="textStart"
                android:drawableStart="@drawable/ic_clock_red"
                android:drawablePadding="5dp"/>
            <TextView
                android:id="@+id/tv_closing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_regular"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:maxLines="1"
                android:layout_marginStart="130dp"
                android:elevation="5dp"/>
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:paddingHorizontal="10dp">
        <Button
            android:id="@+id/btn_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/logout"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_regular"
            android:background="@color/white"
            android:textAlignment="textStart"
            android:drawableStart="@drawable/ic_logout"
            android:drawablePadding="5dp"/>
    </LinearLayout>

</LinearLayout>