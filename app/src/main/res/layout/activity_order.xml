<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">
    <TextView
        android:id="@+id/tv_order_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray_light"
        android:text="#768286328"
        android:textSize="18sp"
        android:fontFamily="@font/roboto_medium"
        android:textColor="@color/black"/>
    <ScrollView
        android:id="@+id/sv_order_waiting"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/ln_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            </LinearLayout>
            <View
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/total"
                        android:textSize="18sp"
                        android:fontFamily="@font/roboto_medium"
                        android:textColor="@color/black"
                        android:layout_alignParentStart="true"/>
                    <TextView
                        android:id="@+id/tv_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="135,000"
                        android:textSize="18sp"
                        android:fontFamily="@font/roboto_medium"
                        android:textColor="@color/black"
                        android:layout_alignParentEnd="true"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/customer_name"
                        android:textSize="18sp"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/black"
                        android:layout_alignParentStart="true"/>
                    <TextView
                        android:id="@+id/tv_customer_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tran Huu Dung"
                        android:textSize="18sp"
                        android:fontFamily="@font/roboto_medium"
                        android:textColor="@color/black"
                        android:layout_alignParentEnd="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/address_delivery"
                        android:textSize="18sp"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/black"
                        android:layout_alignParentStart="true"/>
                    <TextView
                        android:id="@+id/tv_customer_address"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="123,Tran Hung Dao,Q.5,TP. HCM"
                        android:textSize="18sp"
                        android:fontFamily="@font/roboto_medium"
                        android:textColor="@color/black"
                        android:textAlignment="textEnd"
                        android:layout_alignParentEnd="true"
                        android:maxLines="2"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/note"
                        android:textSize="18sp"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/black"
                        android:layout_alignParentStart="true"/>
                    <TextView
                        android:id="@+id/tv_customer_note"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="Com them trung"
                        android:textSize="18sp"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/black"
                        android:textAlignment="textEnd"
                        android:layout_alignParentEnd="true"
                        android:maxLines="2"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <Button
                    android:id="@+id/btn_call_customer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/call_customer"
                    android:textSize="20sp"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:background="@drawable/bg_btn_green"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">
                    <Button
                        android:id="@+id/btn_receive"
                        android:layout_width="165dp"
                        android:layout_height="wrap_content"
                        android:text="@string/receive"
                        android:textSize="20sp"
                        android:fontFamily="@font/roboto_medium"
                        android:textColor="@color/green_light"
                        android:textAllCaps="false"
                        android:background="@drawable/bg_btn_border_green"
                        android:layout_alignParentStart="true"/>
                    <Button
                        android:id="@+id/btn_cancel"
                        android:layout_width="165dp"
                        android:layout_height="wrap_content"
                        android:text="@string/cancel"
                        android:textSize="20sp"
                        android:fontFamily="@font/roboto_medium"
                        android:textColor="@color/red"
                        android:textAllCaps="false"
                        android:background="@drawable/bg_btn_border_red"
                        android:layout_alignParentEnd="true"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ln_shipper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:background="@color/white"
                android:orientation="horizontal">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_shipper_avatar"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/avatar"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="center_horizontal" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="5dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_shipper_name_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/shipper_name"
                            android:textSize="15sp"
                            android:fontFamily="@font/roboto_regular"
                            android:textColor="@color/grey"
                            android:layout_alignParentStart="true"/>

                        <TextView
                            android:id="@+id/tv_shipper_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:fontFamily="@font/roboto_medium"
                            android:text="Ngon Phuc Long"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:layout_toEndOf="@+id/tv_shipper_name_label"
                            android:layout_marginStart="5dp"
                            android:maxLines="2"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="5dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_shipper_phone_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/phone_number"
                            android:textSize="16sp"
                            android:fontFamily="@font/roboto_regular"
                            android:textColor="@color/grey"
                            android:layout_alignParentStart="true"/>
                        <TextView
                            android:id="@+id/tv_shipper_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0979908383"
                            android:textSize="16sp"
                            android:fontFamily="@font/roboto_medium"
                            android:textColor="@color/black"
                            android:layout_toEndOf="@+id/tv_shipper_phone_label"
                            android:layout_marginStart="5dp"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="5dp"
                        android:orientation="horizontal">
                        <Button
                            android:id="@+id/btn_rate_shipper"
                            android:layout_width="100dp"
                            android:layout_height="30dp"
                            android:text="@string/rate"
                            android:textAllCaps="false"
                            android:textSize="17sp"
                            android:fontFamily="@font/roboto_medium"
                            android:textColor="@color/white"
                            android:background="@drawable/bg_btn_green"
                            android:layout_alignParentStart="true"/>
                        <Button
                            android:id="@+id/btn_call_shipper"
                            android:layout_width="100dp"
                            android:layout_height="30dp"
                            android:text="@string/call_shipper"
                            android:textAllCaps="false"
                            android:textSize="17sp"
                            android:fontFamily="@font/roboto_medium"
                            android:textColor="@color/green_dark"
                            android:background="@drawable/bg_btn_border_green"
                            android:layout_alignParentEnd="true"/>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>